            <field name="name">dtbs.facility.tree</field>
            <field name="model">dtbs.carrent.facility</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="dtbs_facility_tree" toolbar="1">
                    <field name="name"/>
