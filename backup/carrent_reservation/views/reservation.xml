<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- =============== MENU =============== -->
        <menuitem id="carrent_reservation_menu" name="Reservations" parent="carrent.main_carrent_menu" sequence="100"/>


        <!-- =============== RESERVATION ============= -->
        <record model="ir.ui.view" id="dtbs_booking_tree_view">
            <field name="name">dtbs.booking.tree</field>
            <field name="model">dtbs.carrent.booking</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="dtbs_booking_tree" toolbar="1" colors="blue:state == 'draft';gray:state == 'done'">
                    <field name="name"/>
                    <field name="customer_id" select="1"/>
                    <field name="checkin"/>
                    <field name="checkout"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>        

        <record model="ir.ui.view" id="dtbs_booking_form_view">
            <field name="name">dtbs.booking.form</field>
            <field name="model">dtbs.carrent.booking</field>
            <field name="arch" type="xml">
                <form string="Reservations">
                    <header>
                    	<button name="send_reservation_mail" type="object" string="Send Reservation Email" states="confirm" class="oe_highlight"/>
                    	<button name="confirm" type="workflow" string="Confirm" states="draft" class="oe_highlight"/>
                        <button name="done" type="workflow" string="Create Folio" states="confirm" class="oe_highlight"/> 
                        <button name="cancel" type="workflow" string="Cancelled" states="confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <label string="Reservation Number: "/>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <group colspan="4" col="4">
                                <field name="date_order" select="1"/>
                                <field name="warehouse_id" select="1"/>
                            </group>
                            <separator/>
							<group colspan="4" col="4">
                                <field name="customer_id" select="1" domain="[('customer','=',True)]"/>
                                <field name="pricelist_id" col="2"/>
                                <field name="partner_order_id" domain="[('parent_id','=',customer_id)]"/>
                                <newline/>
                                <field name="partner_invoice_id" domain="[('parent_id','=',customer_id)]"/>
                                <field name="partner_shipping_id" domain="[('parent_id','=',customer_id)]" invisible="True"/>
                            </group>
                            <group colspan="4" col="4">
                                <field name="checkin"/>
                                <field name="checkout"/>
                                <!--<field name="adults"/>
                                <field name="children"/>-->
                            </group>
                        </group>          
                        <notebook>
                            <page string="Reservation Unit">
                                <field name="bookingunit_ids" colspan="4" nolabel="1">
                                    <form string="Reservation Unit">
                                        <separator string="Vehicle Category"/>
                                        <field name="name" invisible="1" />
                                        <field name="categ_id" select="1" colspan="4" nolabel="1"/>
                                        <newline/>
                                        <separator string="Select Unit"/>
                                        <field name="reserve" colspan="4" string="Vehicle" nolabel="1" />
                                    </form>
                                    <tree string="Reservation Unit">
                                        <field name="reserve" string="Units"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="dtbs_booking_search_view">
            <field name="name">dtbs.booking.search</field>
            <field name="model">dtbs.carrent.booking</field>
            <field name="arch" type="xml">
                <search string="Reservation">
                    <filter domain="[('state','=','draft')]" string="Draft"/>
                    <filter domain="[('state','=','confirm')]" string="Confirm"/>
                    <filter domain="[('state','=','cancel')]" string="Cancelled"/>
                    <filter domain="[('state','=','done')]" string="Done"/>
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="state"/>
                    <newline/>
                    <group expand="0" string="Group By">
                        <filter name="customer_id" string="Customer" icon="terp-personal" domain="[]" context="{'group_by':'customer_id'}"/>
                        <filter string="Order By Month" domain="[]" context="{'group_by':'date_order'}"/>
                    </group>
                </search>
            </field>
        </record>        

        <record model="ir.ui.view" id="dtbs_booking_graph_view">
            <field name="name">dtbs.booking.graph</field>
            <field name="model">dtbs.carrent.booking</field>
            <field name="arch" type="xml">
                <graph string="Reservation" type="pie">
                    <field name="state"/>
                    <field name="name"/>
                </graph>
            </field>
        </record>

        <!--<record model="ir.ui.view" id="dtbs_booking_calendar_view">
            <field name="name">dtbs.booking.calendar</field>
            <field name="model">dtbs.carrent.booking</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <calendar string="Current Reservation" date_start="checkin" date_stop= "dummy" color="partner_id" >
                    <field name="partner_id"/>
                </calendar>
            </field>
        </record>-->

        <record model="ir.actions.act_window" id="dtbs_booking_list_action">
            <field name="name">Reservations</field>
            <field name="res_model">dtbs.carrent.booking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new reservation here
                </p>
            </field>
        </record>

        <menuitem id="reservation_menu" name="Reservations" parent="carrent_reservation_menu"
                  sequence="101"
                  action="dtbs_booking_list_action"/>


        <!-- =============== UNIT ================ -->
        <record model="ir.ui.view" id="carrent_unit_form_inherited_view">
            <field name="name">carrent.unit.form.inherited.view</field>
            <field name="model">dtbs.carrent.unit</field>
            <field name="inherit_id" ref="carrent.dtbs_unit_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Maintenance']" position="after">
                    <page string = "Unit Reservation">
                        <separator colspan='4' string="Unit Reservation Line" />
                        <field name="carrent_reservation_unit_ids" colspan="4" nolabel='1' string="Unit Reservation Line">
                            <form string=" Unit line" >
                                <group colspan='4' col='4'>
                                    <field name="unit_id"/>
                                    <field name="check_in"/>
                                    <field name="state"/>
                                    <field name="check_out"/>
                                    <field name="reservation_id" />
                                    <field name="status"/>
                                </group>
                            </form>
                            <tree>
                                <field name="unit_id"/>
                                <field name="check_in"/>
                                <field name="check_out"/>
                                <field name="state"/>
                                <field name="reservation_id" />
                                <field name="status"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>          


        <!-- ==================== FOLIO ================== -->
        <record model="ir.ui.view" id="carrent_folio_form_inherited_view">
            <field name="name">carrent.folio.form.inherited</field>
            <field name="model">dtbs.carrent.folio</field>
            <field name="inherit_id" ref="carrent.dtbs_carrent_folio_form_view"/>
            <field name="arch" type="xml">
                <field name="invoiced" position='after'>
                    <field name="reservation_id" readonly='1'/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="carrent_folio_tree_inherited_view">
            <field name="name">carrent.folio.tree.inherited</field>
            <field name="model">dtbs.carrent.folio</field>
            <field name="inherit_id" ref="carrent.dtbs_carrent_folio_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position='after'>
                    <field name="reservation_id"/>
                </field>
            </field>
        </record>


        <!-- ==================== SUMMARY =================== -->

        <record model="ir.ui.view" id="carrent_reservation_summary_form_view">
            <field name="name">unit.reservation.summary.form</field>
            <field name="model">dtbs.carrent.reservation.summary</field>
            <field name="arch" type="xml">
                <form string="Reservation Summary">
                    <header>
                        <separator string="Unit Reservation Summary" colspan="4"/>
                    </header>
                    <sheet>
                        <group colspan="4" col="4">
                            <label for="date_from" string="Summary Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/>
                                to
                                <field name="date_to" class="oe_inline"/>
                            </div>
                        </group>
                        <notebook>
                            <page string="Unit Summary">
                                <field name="summary_header" colspan="4" invisible="1"/>
                                <field name="unit_summary" colspan="4" invisible="1"/>
                                <widget type="Unit_Reservation"></widget>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_carrent_reservation_summary">
            <field name="name">Unit Reservations Summary</field>
            <field name="type">ir.actions.act_window</field>             
            <field name="res_model">dtbs.carrent.reservation.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>


        <menuitem id="summary_menu" name="Reservations Summary" parent="carrent_reservation_menu"
                  sequence="102"
                  action="action_carrent_reservation_summary"/>

    </data>
</openerp>
